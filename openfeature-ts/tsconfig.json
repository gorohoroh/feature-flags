    "moduleResolution": "NodeNext",
    "outDir": "./built",
    "allowJs": true,
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "../credentials.json"]
}
